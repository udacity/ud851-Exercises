<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
     // COMPLETED In res->xml create a file called pref_visualizer
    // COMPLETED In pref_visualizer create a preference screen containing a single check box preference
    // This check box preference should have a default value of true, the key 'show_bass', a
    // summaryOff of Hidden, a summaryOn of Shown and a title of 'Show Bass'
    -->
    <android.support.v7.preference.SwitchPreferenceCompat
        android:summaryOff="@string/pref_show_false"
        android:summaryOn="@string/pref_show_true"
        android:key="@string/pref_show_bass_key"
        android:title="@string/pref_show_bass_label"
        android:defaultValue="@bool/pref_true"
        />
    <!-- COMPLETED Add two more checkboxes for the treble and mid-range -->

    <android.support.v7.preference.SwitchPreferenceCompat
        android:summaryOff="@string/pref_show_false"
        android:summaryOn="@string/pref_show_true"
        android:key="@string/pref_show_mid_key"
        android:title="@string/pref_show_mid_label"
        android:defaultValue="@bool/pref_true"
        />

    <android.support.v7.preference.SwitchPreferenceCompat
        android:summaryOff="@string/pref_show_false"
        android:summaryOn="@string/pref_show_true"
        android:key="@string/pref_show_treble_key"
        android:title="@string/pref_show_treble_label"
        android:defaultValue="@bool/pref_true"
        />

</android.support.v7.preference.PreferenceScreen>

